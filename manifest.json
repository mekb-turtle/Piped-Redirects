{
    "name": "Invidious Redirects",
    "version": "1.1",
    "description": "Redirects YouTube links to Invidious",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://youtu.be/*",
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*",
        "<all_urls>"
    ],
    "icons": {
        "32": "img/logo-32.png",
        "48": "img/logo-48.png",
        "64": "img/logo-64.png",
        "96": "img/logo-96.png",
        "128": "img/logo-128.png",
        "256": "img/logo-256.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "manifest_version": 2
}
